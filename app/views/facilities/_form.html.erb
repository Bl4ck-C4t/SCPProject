<%= form_with(model: facility, local: true) do |form| %>
  <% if facility.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(facility.errors.count, "error") %> prohibited this facility from being saved:</h2>

      <ul>
      <% facility.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :capacity %>
    <%= form.number_field :capacity %>
  </div>

  <p>Anomaly class:</p>
  <% for anomaly_class in @anomaly_classes %>
    <%= radio_button_tag(:anomaly_class, anomaly_class["Id"]) %>
    <%= label_tag(:anomaly_class, anomaly_class["Name"], style: "display: inline") %>
    <br>
  <% end %>
  <br>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>