<p id="notice"><%= notice %></p>

<h1>Facilities</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Capacity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @facilities.each do |facility| %>
      <tr>
        <td><%= facility["name"] %></td>
        <td><%= facility["capacity"] %></td>
        <td><%= link_to 'Show', facility %></td>
        <td><%= link_to 'Edit', "/facilities/" + facility["id"].to_s + "/edit/" %></td>
        <td><%= link_to 'Destroy', "/facilities/" + facility["id"].to_s, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Facility', new_facility_path %>

<%= button_to "Prev", facilities_path(), method: :get, params:  {"page": [@page-1, 0].max}%>
<%= @page + 1 %>
<%= button_to "Next", facilities_path(), method: :get, params:  {"page": [@page+1, @total_pages-1].min}%>
