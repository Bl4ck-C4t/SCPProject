<p id="notice"><%= notice %></p>

<h1>Staffs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Position</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @staffs.each do |staff| %>
      <tr>
        <td><%= staff["name"] %></td>
        <td><%= staff["age"] %></td>
        <td><%= staff["positionId"] %></td>
        <td><%= link_to 'Show', "/staffs/" + staff["id"].to_s %></td>
        <td><%= link_to 'Edit', "/staffs/" + staff["id"].to_s + "/edit" %></td>
        <td><%= link_to 'Destroy', "/staffs/" + staff["id"].to_s, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Staff', new_staff_path %>

<%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
